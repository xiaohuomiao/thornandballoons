        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .game-main-image {
                width: 80%;
            }

            .left-div , .iframe-container {
                width: 100%;
                height: 65vh;
            }

            .iframe-container{
                padding: 0px;
            }

            .right-div {
                width: 100%;
            }
