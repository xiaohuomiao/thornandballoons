<script>
    const exitFullscreenButton = document.getElementById('exitFullscreenButton');
    exitFullscreenButton.style.display = 'none';

    const toolbarDiv = document.getElementById('toolbar-div');
    // toolbarDiv.style.display = 'none';

    // Share Buttons
    /*const playGameButton = document.getElementById('playGameButton');
    playGameButton.addEventListener('click', function() {
        document.getElementById("gameFrame").style.display = '';
        document.getElementById("toolbar-div").style.display = '';
        document.getElementById("classic-game-detail").style.display = 'none';
    });*/

    const shareFacebook = document.getElementById('shareFacebook');
    const shareTwitter = document.getElementById('shareTwitter');
    const shareInstagram = document.getElementById('shareInstagram');

    const shareURL = "https://thornandballoons.net/";
    const shareText = "<%= game.shortDesc %>";

    shareFacebook.addEventListener('click', function() {
        window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareURL)}`, '_blank');
    });

    shareTwitter.addEventListener('click', function() {
        window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(shareURL)}&text=${encodeURIComponent(shareText)}`, '_blank');
    });

    shareInstagram.addEventListener('click', function() {
        window.open(`https://www.instagram.com/?url=${encodeURIComponent(shareURL)}`, '_blank');
    });

    // add 20250223
    function toggleMenu() {
        const menu = document.querySelector('.navbar .menu');
        menu.classList.toggle('mobile-menu-active');
    }

    function showIframe() {
        document.querySelector('.left-div').style.display = 'none';
        document.querySelector('.left-div').style.height = '85vh';
        document.querySelector('.iframe-container').style.height = '85vh';
        document.querySelector('.iframe-container').style.display = 'block';
