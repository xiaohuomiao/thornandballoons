        }

        .navbar .menu .submenu a {
            display: block;
            margin: 5px 0;
        }

        .navbar .menu li:hover .submenu {
            display: block;
        }

        /* Mobile Menu */
        .navbar .mobile-menu {
            display: none;
            cursor: pointer;
        }

        .navbar .mobile-menu i {
            font-size: 24px;
            color: white;
        }

        /* Media Query for Mobile Devices */
        @media (max-width: 768px) {
            .navbar {
                flex-direction: row;
                justify-content: space-between;
            }

