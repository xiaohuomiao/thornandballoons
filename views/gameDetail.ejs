            margin-left: 20px;
            position: relative;
        }

        .navbar .menu a {
            color: white;
            text-decoration: none;
            font-size: 16px;
        }

        .navbar .menu .submenu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
