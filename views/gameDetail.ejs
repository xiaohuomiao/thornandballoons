            }

            .right-div {
                width: 28%;
                margin-left: 10px;
            }
        }

        #tesseract-splash-button {
            justify-content: center;
            align-items: center;
            position: relative;
            top: 5%;
            margin: 0 auto;
            outline: none;
            flex-direction: row;
            width: 13rem;
