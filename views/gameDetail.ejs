                display: none;
                flex-direction: column;
                width: 100%;
                position: absolute;
                top: 60px;
                left: 0;
                background-color: #333;
                padding: 10px;
            }

            .navbar .menu li {
                margin: 10px 0;
            }

            .navbar .menu .submenu {
