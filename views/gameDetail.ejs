        }
        .also-like-container .text h2 {
            margin: 0 0 8px; /* 标题与段落的间距 */
            color: white;
        }
        .also-like-container .text p {
            margin: 0;
        }

        /*  nav start   */
        .nav{
            max-width: 1200px;
            margin: 0 auto;
        }
        .logo{
